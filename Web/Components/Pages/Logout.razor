@page "/account/logout"
@layout Layout.AuthLayout

@using MudBlazor
@inject NavigationManager Navigation

<PageTitle>Logging out...</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small">
    <MudCard Elevation="3">
        <MudCardContent>
            <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-4">Signing you out...</MudText>
            <MudProgressLinear Indeterminate="true" />

            <form method="post" action="/api/account/logout" id="logoutForm">
                <AntiforgeryToken />
            </form>
        </MudCardContent>
    </MudCard>
</MudContainer>

<script>
    document.getElementById('logoutForm').submit();
</script>